# SnapRAID Configuration
{{ ansible_managed | comment }}
# DO NOT EDIT MANUALLY

# Parity Disks - Legacy Mode (Single File Per Disk)
{% for entry in parity_config %}
{%- if entry.level == 1 -%}
{% if entry.disks[0].mode == 'dedicated' %}
parity {{ parity_mount_path }}/parity01/snapraid.parity
{% else %}
parity {% for disk in entry.disks %}{{ parity_mount_path }}/parity{{ '%02d' % loop.index }}/snapraid.parity{% if not loop.last %},{% endif %}{% endfor %}
{% endif %}
{%- else -%}
{% if entry.disks[0].mode == 'dedicated' %}
{{ entry.level }}-parity {{ parity_mount_path }}/parity{{ '%02d' % loop.index }}/snapraid.{{ entry.level }}-parity
{% else %}
{{ entry.level }}-parity {% for disk in entry.disks %}{{ parity_mount_path }}/parity{{ '%02d' % loop.index }}/snapraid.{{ entry.level }}-parity{% if not loop.last %},{% endif %}{% endfor %}
{% endif %}
{%- endif -%}
{% endfor %}

# Content Files
{% for content_file in content_files %}
content {{ content_file }}
{% endfor %}

# Data Disks (btrfs data subvol)
{% for i in range(1, data_disks|length + 1) %}
data d{{ i }} {{ data_mount_path }}/data{{ '%02d' % i }}/
{% endfor %}

# Excludes hidden files and directories
nohidden

# Defines files and directories to exclude
exclude *.unrecoverable
exclude /tmp/
exclude /lost+found/
exclude *.!sync
exclude /.snapshots/

# Automatically save the state when syncing after the specified amount of GB processed
autosave 500
